extends ../layout

block content
  h1.text-center #{title}

  .container
    form(method="POST" action="/pacientes")
      .form-row
        .form-group.col-md-6
          label(for="nombre") Nombre:
          input.form-control(type="text" id="nombre" name="nombre" required value=(paciente ? paciente.nombre : ''))
        .form-group.col-md-6
          label(for="apellido") Apellido:
          input.form-control(type="text" id="apellido" name="apellido" required value=(paciente ? paciente.apellido : ''))

      .form-row
        .form-group.col-md-6
          label(for="dni") DNI:
          input.form-control(type="text" id="dni" name="dni" required value=(paciente ? paciente.dni : ''))
        .form-group.col-md-6
          label(for="fechaNacimiento") Fecha de Nacimiento:
          input.form-control(type="date" id="fechaNacimiento" name="fechaNacimiento" required value=(paciente ? paciente.fechaNacimiento : ''))

      .form-row
        .form-group.col-md-6
          label(for="telefono") Teléfono:
          input.form-control(type="tel" id="telefono" name="telefono" required value=(paciente ? paciente.telefono : ''))
        .form-group.col-md-6
          label(for="email") Email:
          input.form-control(type="email" id="email" name="email" required value=(paciente ? paciente.email : ''))

      .form-row
        .form-group.col-md-6
          label(for="domicilio") Domicilio:
          input.form-control(type="text" id="domicilio" name="domicilio" value=(paciente ? paciente.domicilio : ''))
        .form-group.col-md-6
          label(for="localidad") Localidad:
          input.form-control(type="text" id="localidad" name="localidad" value=(paciente ? paciente.localidad : ''))

      .form-row
        .form-group.col-md-6
          label(for="provincia") Provincia:
          select.form-control(id="provincia" name="provincia" required)
            option(value="" selected disabled) Selecciona una provincia
            option(value="Buenos Aires") Buenos Aires
            option(value="Catamarca") Catamarca
            option(value="Chaco") Chaco
            option(value="Chubut") Chubut
            option(value="Córdoba") Córdoba
            option(value="Corrientes") Corrientes
            option(value="Entre Ríos") Entre Ríos
            option(value="Formosa") Formosa
            option(value="Jujuy") Jujuy
            option(value="La Pampa") La Pampa
            option(value="La Rioja") La Rioja
            option(value="Mendoza") Mendoza
            option(value="Misiones") Misiones
            option(value="Neuquén") Neuquén
            option(value="Río Negro") Río Negro
            option(value="Salta") Salta
            option(value="San Juan") San Juan
            option(value="San Luis") San Luis
            option(value="Santa Cruz") Santa Cruz
            option(value="Santa Fe") Santa Fe
            option(value="Santiago del Estero") Santiago del Estero
            option(value="Tierra del Fuego") Tierra del Fuego
            option(value="Tucumán") Tucumán
        .form-group.col-md-6
          label(for="cp") Código Postal:
          input.form-control(type="text" id="cp" name="cp" value=(paciente ? paciente.cp : ''))

      button(type="submit" class="btn btn-primary mt-3 btn-block") Registrar Paciente