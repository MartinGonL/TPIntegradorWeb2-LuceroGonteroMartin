extends ../layout

block content
  h1 #{title} 
  if errors && errors.length > 0
    div.alert.alert-danger.mt-3
      h4 Errores: 
      ul
        each error in errors
          li= error.msg 
  
  form(method="POST" action="/alas")
    div.form-group.mt-3
      label(for="nombre") Nombre:
      input(type="text" id="nombre" name="nombre" value=ala && ala.nombre ? ala.nombre : '' required class="form-control")

    div.form-group.mt-3
      label(for="descripcion") Descripci√≥n:
      textarea#descripcion.form-control(name="descripcion" rows="3") #{ala && ala.descripcion ? ala.descripcion : ''}

    button(type="submit" class="btn btn-primary mt-3") Crear Ala 
    a(href="/alas" class="btn btn-secondary mt-3 ml-2") Cancelar 
